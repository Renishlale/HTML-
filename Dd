CREATE TABLE Faculty (
    FacultyID INT PRIMARY KEY,
    FacultyName VARCHAR(255),
    Department VARCHAR(255),
    Salary DECIMAL(10, 2),
    HireDate DATE
);

ALTER TABLE Faculty
ADD CONSTRAINT chk_salary CHECK (Salary > 30000);
ALTER TABLE Faculty
ADD mailid VARCHAR(255);
